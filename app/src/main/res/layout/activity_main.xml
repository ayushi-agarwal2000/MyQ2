<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:background="#F8E00A"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/headingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="30sp"
        android:textColor="#F10606"
        android:textStyle="bold"
        android:text="@string/holiday_destinations"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/askTravelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/headingTextView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:textSize="18sp"
        android:textColor="#F10606"
        android:textStyle="bold"
        android:text="@string/means_of_transportation"
        android:layout_centerHorizontal="true"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/askTravelTextView"
        android:layout_marginLeft="16dp">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Train"
            android:textSize="20sp"
            android:textColor="#F10606" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bus"
            android:textSize="20sp"
            android:textColor="#F10606"/>
        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car"
            android:textSize="20sp"
            android:textColor="#F10606"/>

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flight"
            android:textSize="20sp"
            android:textColor="#F10606"/>
    </RadioGroup>

    <TextView
        android:id="@+id/askDestTextView"
        android:layout_width="wrap_content"
        android:layout_below="@+id/radioGroup"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="Select your trip locations"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#F10606"/>

    <RelativeLayout
        android:id="@+id/checkBoxLayout"
        android:layout_below="@id/askDestTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <CheckBox
            android:layout_marginLeft="16dp"
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manali"
            android:textSize="20sp"
            android:textColor="#F10606"/>

        <CheckBox
            android:layout_marginLeft="68dp"
            android:id="@+id/checkBox2"
            android:layout_toRightOf="@id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ooty"
            android:textSize="20sp"
            android:textColor="#F10606"/>

        <CheckBox
            android:layout_marginLeft="16dp"
            android:id="@+id/checkBox3"
            android:layout_below="@id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dharmshala"
            android:textSize="20sp"
            android:textColor="#F10606"/>

        <CheckBox
            android:layout_marginLeft="29dp"
            android:id="@+id/checkBox4"
            android:layout_toRightOf="@+id/checkBox3"
            android:layout_below="@id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MountAbu"
            android:textSize="20sp"
            android:textColor="#F10606"/>

        <CheckBox
            android:layout_marginLeft="16dp"
            android:id="@+id/checkBox5"
            android:layout_below="@id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mussoorie"
            android:textSize="20sp"
            android:textColor="#F10606"/>

        <CheckBox
            android:layout_marginLeft="42dp"
            android:id="@+id/checkBox6"
            android:layout_below="@id/checkBox4"
            android:layout_toRightOf="@id/checkBox5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auli"
            android:textSize="20sp"
            android:textColor="#F10606"/>
    </RelativeLayout>

    <Button
        android:id="@+id/submitButton"
        android:layout_marginTop="40dp"
        android:layout_below="@id/checkBoxLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#E11616"
        android:textSize="20sp"
        android:backgroundTint="@color/white"
        android:text="Travel"/>


</RelativeLayout>